{
  "env": {
    "BASH_MAX_OUTPUT_LENGTH": "100000",
    "BASH_DEFAULT_TIMEOUT_MS": "2000000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:modal.com)",
      "WebFetch(domain:docs.pytorch.org)",
      "WebFetch(domain:docs.vllm.ai)",
      "WebFetch(domain:github.com)",
      "mcp__puppeteer__puppeteer_navigate",
      "mcp__puppeteer__puppeteer_screenshot",
      "mcp__puppeteer__puppeteer_click",
      "mcp__puppeteer__puppeteer_fill",
      "mcp__puppeteer__puppeteer_evaluate",
      "mcp__puppeteer__puppeteer_select",
      "mcp__puppeteer__puppeteer_hover",
      "Bash(./read_reference_logs.sh)",
      "Bash(./read_inference_logs.sh)",
      "Bash(./read_training_logs.sh)",
      "Bash(./run_local.sh)",
      "Bash(python:*)",
      "Bash(lsof:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(kill:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(uv sync:*)",
      "Bash(uv run:*)",
      "Bash(uv add:*)",
      "Bash(pkill:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(git submodule update:*)",
      "Bash(modal deploy:*)",
      "Bash(modal run:*)",
      "Bash(modal app list:*)",
      "Bash(modal serve:*)",
      "Bash(rg:*)",
      "Bash(modal app logs:*)",
      "Bash(nohup python -m http.server:*)",
      "Bash(truncate:*)",
      "Bash(uv show:*)",
      "Bash(uv pip show:*)",
      "Bash(modal app logs arc-grpo-system-inference-reference & sleep 5 && kill $!)",
      "Bash(./test_training.sh:*)",
      "Bash(./run.sh:*)"
    ],
    "deny": [
      "Bash(rm endpoints.log)",
      "Bash(python serve_dashboard.py:*)",
      "Bash(./serve_modal.sh)",
      "Bash(./start_dashboard.sh)",
      "Bash(modal app logs:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "puppeteer"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python3 .claude/audio_launcher.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python3 .claude/audio_launcher.py"
          }
        ]
      }
    ]
  }
}